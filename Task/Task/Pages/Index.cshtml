@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
<script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $.noConflict();
        $('#table_id').DataTable({
            order: [[0, 'asc']],
        });
    });
</script>

<form method="post" class="mb-4">
    <h1 class="mb-3">Request</h1>
    <div class="d-flex">
        <div class="d-inline-block col-md-2">
            <label class="form-label">First Date</label>
        </div>

        <div class="d-inline-block col-md-2">
            <label class="form-label">Second Date</label>
        </div>
    </div>
    <div class="d-flex">
        <div class="d-inline-block col-md-2">
            <input type="date" class="form-control" asp-for="getCurrencyViewModel.date1" />
        </div>

        <div class="d-inline-block col-md-2">
            <input type="date" class="form-control" asp-for="getCurrencyViewModel.date2" />
        </div>
        <div class="d-inline-block col-md-4">
            <button type="submit" class="btn btn-primary">Run</button>
        </div>
    </div>
</form>
<table id="table_id" border="1" class="display" style="width:100%;">
    <thead>
        <tr>
            <th>Date</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.currencies)
        {
            <tr>
                <td>@c.date.ToString("dd/MM/yyyy")</td>
                <td>@c.value</td>
            </tr>
        }
    </tbody>
</table>